<html>
<head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="//cdn.bootcss.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="http://v3.bootcss.com/examples/blog/blog.css">
    <style>
        .content-item{
            margin: 15px 0;
            padding: 25px 45px;
            max-width: 42em;
            line-height: 180%;
            box-shadow: 0px 0px 0.1em #aaa;
        }
        .content-item:hover{
            box-shadow: 0px 0px 0.5em #f90D0D;
        }
        .content-item h3 a{
            color:#333;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <h1 style="margin-top:15px;"><%= title %></h1>
            <hr>
            <% if (models.length) { %>  
            <div class="content">
                <% models.forEach(function(item){ %> 
                <div class="content-item">
                    <h3><a href="/blog/<%= item.id%>"><%= item.title %></a></h3>
                    <p><%= item.content %></p>
                </div>
                <% }) %>
            </div>
            <% } %>  
        </div>
        <footer id="footer">
			Send comments, critique and suggestions to lemo. Powered by node.js
	    </footer>
    </div>
</body>
</html>

